<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.co.company.dailyhealth">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:screenOrientation="portrait"
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".AddfoodActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".SettingActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".FoodListActivity" />
        <activity android:name=".ExerciseListActivity" />
        <activity android:name=".InputFoodActivity"
            android:label="음식 데이터 추가"
            android:theme="@android:style/Theme.Dialog" />
        <activity android:name=".InputExerActivity"
            android:label="운동 데이터 추가"
            android:theme="@android:style/Theme.Dialog" />
        <activity android:name=".InputSleepActivity"
            android:label="수면 데이터 추가"
            android:theme="@android:style/Theme.Dialog" />
        <activity android:name=".InputDirectFoodActivity"
            android:label="직접 데이터 추가"
            android:theme="@android:style/Theme.Dialog"/>
        <activity android:name=".InputDirectExerActivity"
            android:label="직접 데이터 추가"
            android:theme="@android:style/Theme.Dialog" />

    </application>

</manifest>

