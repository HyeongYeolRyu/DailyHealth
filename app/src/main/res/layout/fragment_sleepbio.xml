<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

android:layout_width="match_parent"
android:layout_height="match_parent"
>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        >


        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart_sleep"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/addSleepBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="+ 수면 데이터 입력"
            android:textSize="20dp"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="최근 수면 데이터"
            android:textSize="23dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/sleep_data1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/sleep_data2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/sleep_data3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/sleep_data4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/sleep_data5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            />

    </LinearLayout>


</LinearLayout>
